<?xml version="1.0" ?>
<!DOCTYPE bulletml SYSTEM "http://www.asahi-net.or.jp/~cs8k-cyu/bulletml/bulletml.dtd">
<bulletml>
  <action label="lib_spear">
    <fire>
      <direction type="relative">0</direction>
      <speed type="absolute">0.1</speed>
      <bullet>
        <actionRef label="lib_spear_node" />
      </bullet>
    </fire>
    <fire>
      <direction type="relative">0</direction>
      <speed type="absolute">0.2</speed>
      <bullet>
        <actionRef label="lib_spear_node" />
      </bullet>
    </fire>
    <fire>
      <direction type="relative">0</direction>
      <speed type="absolute">0.3</speed>
      <bullet>
        <actionRef label="lib_spear_node" />
      </bullet>
    </fire>
    <fire>
      <direction type="relative">0</direction>
      <speed type="absolute">0.4</speed>
      <bullet>
        <actionRef label="lib_spear_node" />
      </bullet>
    </fire>
    <fire>
      <direction type="relative">0</direction>
      <speed type="absolute">0.5</speed>
      <bullet>
        <actionRef label="lib_spear_node" />
      </bullet>
    </fire>
    <fire>
      <direction type="relative">180</direction>
      <speed type="absolute">0.1</speed>
      <bullet>
        <actionRef label="lib_spear_node" />
      </bullet>
    </fire>
    <fire>
      <direction type="relative">180</direction>
      <speed type="absolute">0.2</speed>
      <bullet>
        <actionRef label="lib_spear_node" />
      </bullet>
    </fire>
    <fire>
      <direction type="relative">180</direction>
      <speed type="absolute">0.3</speed>
      <bullet>
        <actionRef label="lib_spear_node" />
      </bullet>
    </fire>
    <fire>
      <direction type="relative">180</direction>
      <speed type="absolute">0.4</speed>
      <bullet>
        <actionRef label="lib_spear_node" />
      </bullet>
    </fire>
    <fire>
      <direction type="relative">180</direction>
      <speed type="absolute">0.5</speed>
      <bullet>
        <actionRef label="lib_spear_node" />
      </bullet>
    </fire>
    <vanish />
  </action>
  <action label="lib_spear_node">
    <wait>60</wait>
    <changeSpeed>
      <speed type="sequence">0.2</speed>
      <term>40</term>
    </changeSpeed>
  </action>
  <action label="top">
    <fire>
      <direction type="aim">0+(5-10*$rand)</direction>
      <speed type="absolute">0.1</speed>
      <bullet>
        <action>
          <fire>
            <direction type="relative">0</direction>
            <speed type="absolute">3</speed>
            <bullet>
              <actionRef label="fireSpear" />
            </bullet>
          </fire>
          <fire>
            <direction type="relative">-10</direction>
            <speed type="absolute">3</speed>
            <bullet>
              <actionRef label="fireSpear" />
            </bullet>
          </fire>
          <fire>
            <direction type="relative">10</direction>
            <speed type="absolute">3</speed>
            <bullet>
              <actionRef label="fireSpear" />
            </bullet>
          </fire>
          <vanish />
        </action>
      </bullet>
    </fire>
  </action>
  <action label="fireSpear">
    <wait>30</wait>
    <repeat>
      <times>10</times>
      <action>
        <fire>
          <direction type="sequence">36</direction>
          <speed type="absolute">4</speed>
          <bullet>
            <action>
              <wait>2</wait>
              <actionRef label="lib_spear" />
            </action>
          </bullet>
        </fire>
      </action>
    </repeat>
    <vanish />
  </action>
</bulletml>
