<?xml version="1.0" ?>
<!DOCTYPE bulletml SYSTEM "http://www.asahi-net.or.jp/~cs8k-cyu/bulletml/bulletml.dtd">
<bulletml>
  <action label="lib_laser">
    <repeat>
      <times>$1</times>
      <action>
        <fire>
          <direction type="relative">0</direction>
          <speed type="absolute">2</speed>
          <bullet />
        </fire>
        <wait>3</wait>
      </action>
    </repeat>
    <vanish />
  </action>
  <action label="top">
    <repeat>
      <times>5</times>
      <action>
        <repeat>
          <times>20</times>
          <action>
            <fire>
              <direction type="absolute">360*$rand</direction>
              <speed type="absolute">0.1</speed>
              <bullet>
                <actionRef label="lib_laser">
                  <param>10</param>
                </actionRef>
              </bullet>
            </fire>
            <wait>5</wait>
          </action>
        </repeat>
        <wait>20</wait>
      </action>
    </repeat>
  </action>
</bulletml>
