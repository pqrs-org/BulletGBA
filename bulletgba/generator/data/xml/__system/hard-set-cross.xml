<?xml version="1.0" ?>
<!DOCTYPE bulletml SYSTEM "http://www.asahi-net.or.jp/~cs8k-cyu/bulletml/bulletml.dtd">
<bulletml>
  <action label="top">
    <repeat>
      <times>3</times>
      <action>
        <fire>
          <direction type="absolute">0+10*$rand</direction>
          <speed type="absolute">1</speed>
          <bullet>
            <actionRef label="fireCross" />
          </bullet>
        </fire>
        <repeat>
          <times>19</times>
          <action>
            <wait>10</wait>
            <fire>
              <direction type="sequence">18</direction>
              <speed type="absolute">1</speed>
              <bullet>
                <actionRef label="fireCross" />
              </bullet>
            </fire>
          </action>
        </repeat>
        <wait>60</wait>
        <fire>
          <direction type="absolute">0-10*$rand</direction>
          <speed type="absolute">1</speed>
          <bullet>
            <actionRef label="fireCross" />
          </bullet>
        </fire>
        <repeat>
          <times>19</times>
          <action>
            <wait>10</wait>
            <fire>
              <direction type="sequence">-18</direction>
              <speed type="absolute">1</speed>
              <bullet>
                <actionRef label="fireCross" />
              </bullet>
            </fire>
          </action>
        </repeat>
        <wait>60</wait>
      </action>
    </repeat>
  </action>
  <action label="fireCross">
    <wait>20</wait>
    <changeSpeed>
      <speed type="absolute">0.1</speed>
      <term>1</term>
    </changeSpeed>
    <wait>60</wait>
    <changeSpeed>
      <speed type="absolute">2</speed>
      <term>1</term>
    </changeSpeed>
    <changeDirection>
      <direction type="sequence">1</direction>
      <term>30</term>
    </changeDirection>
    <repeat>
      <times>8</times>
      <action>
        <wait>10</wait>
        <fire>
          <direction type="relative">0</direction>
          <speed type="absolute">0.1</speed>
          <bullet>
            <actionRef label="line" />
          </bullet>
        </fire>
        <fire>
          <direction type="relative">90</direction>
          <speed type="absolute">0.1</speed>
          <bullet>
            <actionRef label="line" />
          </bullet>
        </fire>
        <fire>
          <direction type="relative">180</direction>
          <speed type="absolute">0.1</speed>
          <bullet>
            <actionRef label="line" />
          </bullet>
        </fire>
        <fire>
          <direction type="relative">270</direction>
          <speed type="absolute">0.1</speed>
          <bullet>
            <actionRef label="line" />
          </bullet>
        </fire>
      </action>
    </repeat>
  </action>
  <action label="line">
    <wait>120</wait>
    <changeSpeed>
      <speed type="sequence">0.1</speed>
      <term>30</term>
    </changeSpeed>
    <changeDirection>
      <direction type="sequence">-1</direction>
      <term>30</term>
    </changeDirection>
  </action>
</bulletml>
