<?xml version="1.0" ?>
<!DOCTYPE bulletml SYSTEM "http://www.asahi-net.or.jp/~cs8k-cyu/bulletml/bulletml.dtd">
<bulletml>
  <action label="top">
    <repeat>
      <times>2</times>
      <action>
        <repeat>
          <times>5</times>
          <action>
            <repeat>
              <times>10</times>
              <action>
                <fire>
                  <direction type="aim">0</direction>
                  <speed type="absolute">2</speed>
                  <bullet>
                    <action>
                      <wait>10</wait>
                      <fire>
                        <direction type="relative">180-60</direction>
                        <speed type="absolute">1</speed>
                        <bullet>
                          <actionRef label="fireVulcan_hard" />
                        </bullet>
                      </fire>
                      <fire>
                        <direction type="relative">180+60</direction>
                        <speed type="absolute">1</speed>
                        <bullet>
                          <actionRef label="fireVulcan_hard" />
                        </bullet>
                      </fire>
                    </action>
                  </bullet>
                </fire>
                <wait>2</wait>
              </action>
            </repeat>
            <wait>20</wait>
          </action>
        </repeat>
        <wait>30</wait>
      </action>
    </repeat>
  </action>
  <action label="fireVulcan_hard">
    <wait>30</wait>
    <changeSpeed>
      <speed type="absolute">0.1</speed>
      <term>1</term>
    </changeSpeed>
    <wait>30</wait>
    <fire form="thin">
      <direction type="aim">0</direction>
      <speed type="absolute">2</speed>
      <bullet>
        <action />
      </bullet>
    </fire>
    <repeat>
      <times>5</times>
      <action>
        <fire>
          <direction type="absolute">360*$rand</direction>
          <speed type="absolute">1</speed>
          <bullet>
            <action />
          </bullet>
        </fire>
      </action>
    </repeat>
    <vanish />
  </action>
</bulletml>
