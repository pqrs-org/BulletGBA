<?xml version="1.0" ?>
<!DOCTYPE bulletml SYSTEM "../bulletml.dtd">
<bulletml>
	<bullet label="src">
		<action>
			<wait>
				10
			</wait>
			<repeat>
				<times>
					25
				</times>
				<action>
					<fire>
						<direction type="absolute">
							$rand*360
						</direction>
						<speed>
							$rand*10
						</speed>
						<bullet>
							<action>
								<wait>
									1
								</wait>
								<fire>
									<direction type="absolute">
										180
									</direction>
									<speed>
										1.8
									</speed>
									<bullet/>
								</fire>
								<vanish/>
							</action>
						</bullet>
					</fire>
				</action>
				<vanish/>
			</repeat>
		</action>
	</bullet>
	<action label="top">
		<repeat>
			<times>
				350/(10-$rank*6)
			</times>
			<action>
				<wait>
					10-$rank*6
				</wait>
				<fire>
					<direction type="absolute">
						90
					</direction>
					<speed>
						-10+$rand*20
					</speed>
					<bulletRef label="src"/>
				</fire>
			</action>
		</repeat>
		<wait>
			30
		</wait>
	</action>
</bulletml>
