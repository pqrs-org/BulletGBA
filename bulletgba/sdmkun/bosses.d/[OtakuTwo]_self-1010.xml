<?xml version="1.0" ?>
<!DOCTYPE bulletml SYSTEM "../bulletml.dtd">
<bulletml type="vertical" xmlns="http://www.asahi-net.or.jp/~cs8k-cyu/bulletml">

<action label="top">
 <fire><direction type="absolute"> 120</direction><speed>2.5</speed><bulletRef label="p1"/></fire>
 <fire><direction type="absolute">-120</direction><speed>2.5</speed><bulletRef label="p1"/></fire>
 <fire><direction type="absolute">  45</direction><speed>  2</speed><bulletRef label="p1"/></fire>
 <fire><direction type="absolute"> -45</direction><speed>  2</speed><bulletRef label="p1"/></fire>
 <wait>1300</wait>
</action>

<bullet label="p1">
 <action>
  <wait>20</wait>
  <changeSpeed><speed>0</speed><term>1</term></changeSpeed>
  <wait>20</wait>
  <changeDirection><direction type="absolute">180</direction><term>5</term></changeDirection>
  <wait>10</wait>
  <repeat><times>5</times>
   <actionRef label="huri"><param>24</param><param>-45</param><param>3</param></actionRef>
   <actionRef label="huri"><param>48</param><param> 90</param><param>6</param></actionRef>
   <actionRef label="huri"><param>24</param><param>-45</param><param>3</param></actionRef>
  </repeat>
  <wait>400</wait>
  <actionRef label="way"><param>-45+$rank*30</param><param>20</param></actionRef>
  <actionRef label="way"><param>-30+$rank*20</param><param>10</param></actionRef>
  <actionRef label="way"><param>-15+$rank*10</param><param>20</param></actionRef>
  <actionRef label="way"><param>  0         </param><param>10</param></actionRef>
  <actionRef label="way"><param> 15-$rank*10</param><param>20</param></actionRef>
  <actionRef label="way"><param> 30-$rank*20</param><param>10</param></actionRef>
  <actionRef label="way"><param> 45-$rank*30</param><param>20</param></actionRef>
  <wait>175</wait>
  <changeSpeed><speed>1+$rand</speed><term>1</term></changeSpeed>
  <wait>10+$rand*65</wait>
  <repeat><times>30</times>
   <action>
    <fire><direction type="sequence">4</direction><speed>1.0</speed><bullet/></fire>
    <fire><direction type="sequence">1</direction><speed>0.8</speed><bullet/></fire>
    <fire><direction type="sequence">1</direction><speed>0.6</speed><bullet/></fire>
    <fire><direction type="sequence">4</direction><speed>0.9</speed><bullet/></fire>
    <fire><direction type="sequence">1</direction><speed>0.7</speed><bullet/></fire>
    <fire><direction type="sequence">1</direction><speed>0.5</speed><bullet/></fire>
   </action>
  </repeat>
  <vanish/>
 </action>
</bullet>

<action label="huri">
 <changeDirection><direction type="relative">$2</direction><term>$1</term></changeDirection>
 <repeat><times>$3</times>
  <action>
   <repeat><times>1+$rank*3</times>
    <action>
     <fire><direction type="relative">-30+$rand*60</direction><speed>0.4+$rand*0.2</speed><bullet/></fire>
    </action>
   </repeat>
   <wait>8</wait>
  </action>
 </repeat>
</action>

<action label="way">
 <fire>
  <direction type="aim">$1</direction>
  <speed>1.2</speed>
  <bullet/>
 </fire>
 <repeat><times>$2-1</times>
  <action>
   <fire>
    <direction type="aim">$1</direction>
    <speed type="sequence">0.2</speed>
    <bullet/>
   </fire>
  </action>
 </repeat>
</action>

</bulletml>